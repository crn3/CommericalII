@model Doctor
<form method="post" asp-action="Edit" enctype="multipart/form-data">
	<div class="row pb-2">
		<div class="col-9">
			<h2>Edit Doctor</h2>
			<div asp-validation-summary="All"></div>
			<div class="mb-3">
				<label asp-for="FirstName">First name</label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="LastName">Last name</label>
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Specialisation">Specialisation</label>
				<input asp-for="Specialisation" class="form-control" />
				<span asp-validation-for="Specialisation" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Image">Image File</label>
				<input asp-for="Image" type="hidden"/>
				<input type="file" name="file" class="form-control" />
			</div>

		</div>

		<div class="col-3">
			<img src="~/@Model.Image" />
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
			<a asp-controller="Doctor" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to doctors</a>
		</div>
	</div>


</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
