@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Doctors";
}
<h1>Doctors</h1>
<a asp-controller="Doctor" asp-action="Create" class="btn btn-primary">
    Add Doctor
</a>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialisation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width ="5%">@obj.Id</td>
                <td width ="20%">@obj.FirstName</td>
                <td width ="20%">@obj.LastName</td>
                <td width ="30%">@obj.Specialisation</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controler="Doctor" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controler="Doctor" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
