@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Doctors";
}
<h1>Doctors</h1>

<p>
    <form class="d-flex" class="col-3">
        <input type="text" placeholder="Search..." class="form-control me-sm-2" name="searchString" />
        <input type="submit" value="Search" class="btn btn-outline-primary form-control" style="width:200px" />
        <a asp-route-Doctors="" asp-route-SearchString="" class="btn btn-outline-secondary"> Clear</a>
    </form>
</p>

<a asp-controller="Doctor" asp-action="Create" class="btn btn-primary">
    Add Doctor
</a>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialisation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width ="10%">
                    @if (!string.IsNullOrEmpty(obj.Image))
                    {
                                <img src="@Url.Content($"~/{obj.Image}")" class="img-thumbnail" style="width: 100px; height: auto;" />

                    }
                <td >@obj.Id</td>
                <td >@obj.FirstName</td>
                <td >@obj.LastName</td>
                <td >@obj.Specialisation</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
